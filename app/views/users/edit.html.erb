<%= provide(:title, "Edit User") %>
<% provide(:button_text, 'Update Account') %>

<h1>Edit Account:</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Change</a>
    </div>
    <button style="float:right">Delete Account</button>
  </div>
</div>
